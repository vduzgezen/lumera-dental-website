// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  customer
  lab
  admin
}

enum CaseStatus {
  NEW
  IN_DESIGN
  READY_FOR_REVIEW
  CHANGES_REQUESTED
  APPROVED
  IN_MILLING
  SHIPPED
}

enum FileKind {
  STL
  PLY
  OBJ
  PHOTO
  OTHER
}

enum ProductionStage {
  DESIGN
  MILLING_GLAZING
  SHIPPING
}

enum ProductKind {
  ZIRCONIA
  MULTILAYER_ZIRCONIA
  EMAX
  INLAY_ONLAY
}

model Clinic {
  id    String       @id @default(cuid())
  name  String
  users User[]
  cases DentalCase[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String? // NEW: display name for doctors
  role      Role
  clinicId  String?
  clinic    Clinic?  @relation(fields: [clinicId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctorCases DentalCase[] @relation("DoctorCases")
}

model DentalCase {
  id       String @id @default(cuid())
  clinicId String
  clinic   Clinic @relation(fields: [clinicId], references: [id])

  doctorUserId String?
  doctorUser   User?   @relation("DoctorCases", fields: [doctorUserId], references: [id])

  patientAlias String
  doctorName   String? // snapshot from User.name for display
  toothCodes   String

  orderDate DateTime    @default(now())
  product   ProductKind @default(ZIRCONIA)

  material String?
  shade    String?
  dueDate  DateTime?

  status   CaseStatus    @default(IN_DESIGN)
  files    CaseFile[]
  events   StatusEvent[]
  comments CaseComment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stage      ProductionStage @default(DESIGN)
  designedAt DateTime?
  milledAt   DateTime?
  shippedAt  DateTime?

  needsReview       Boolean   @default(false)
  reviewQuestion    String?
  reviewRequestedAt DateTime?
  reviewDeadline    DateTime?

  shippingCarrier String?
  trackingNumber  String?
  shippingEta     DateTime?

  @@map("Case")
}

model CaseFile {
  id        String     @id @default(cuid())
  caseId    String
  case      DentalCase @relation(fields: [caseId], references: [id])
  label     String? // 'scan' | 'design_with_model' | 'design_only'
  kind      FileKind
  url       String
  sizeBytes Int?
  createdAt DateTime   @default(now())
}

model StatusEvent {
  id      String      @id @default(cuid())
  caseId  String
  case    DentalCase  @relation(fields: [caseId], references: [id])
  from    CaseStatus?
  to      CaseStatus
  note    String?
  at      DateTime    @default(now())
  actorId String?
}

model CaseComment {
  id        String     @id @default(cuid())
  caseId    String
  case      DentalCase @relation(fields: [caseId], references: [id])
  authorId  String
  body      String
  createdAt DateTime   @default(now())
}
